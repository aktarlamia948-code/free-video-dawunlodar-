  <div class="container">
    <h1>üì• Video Downloader</h1>
    <input type="text" id="videoURL" placeholder="Paste video link here">
    <button onclick="downloadVideo()">Download</button>
    <div class="result" id="result"></div>
  </div>

  <script>
    function downloadVideo() {
      let url = document.getElementById("videoURL").value;
      let resultDiv = document.getElementById("result");

      if(url === "") {
        resultDiv.innerHTML = "‚ùå Please enter a video link!";
        resultDiv.style.color = "red";
        return;
      }

      // Demo: Send user to Snaptik or Y2mate for actual download
      let downloadLink = "https://snaptik.app/?" + "url=" + encodeURIComponent(url);

      resultDiv.innerHTML = `
        ‚úÖ Link Ready! <br>
        <a class="download-link" href="${downloadLink}" target="_blank">Download Now</a>
      `;
    }
  </script>
